package parte2;
public class Rental		// Alquiler 
{
	private Movie movie;
	private int days;
	
	public Rental(Movie movie, int days) 
	{
		this.movie = movie;
		this.days = days;
	}

	public int getDays() 
	{
		return days;
	}

	public Movie getMovie() 
	{
		return movie;
	}

	int getPoints() {
		// 2) Cada alquiler da 1 punto. Punto extra para novedades alquiladas 2 o más días
		int points = 1;
		if ((getMovie().getCategory() == Movie.NEW_RELEASE) && getDays() > 1)
			points = 2;
		return points;
	}

	double getPrice() {
		// 1) Calcula el importe de cada alquiler
		double price = 0;
		switch (getMovie().getCategory()) {
		case Movie.NEW_RELEASE:
			price += getDays() * 3;
			break;
		case Movie.REGULAR:
			price += 2;
			if (getDays() > 2)
				price += (getDays() - 2) * 1.5;
			break;
		case Movie.CHILDRENS:
			price += 1.5;
			if (getDays() > 3)
				price += (getDays() - 3) * 1.5;
			break;
		}
		return price;
	}
}
