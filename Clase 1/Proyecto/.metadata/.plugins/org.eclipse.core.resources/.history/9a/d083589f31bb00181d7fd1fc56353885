package parte2;

public class Categories {
	
	public static final int CHILDRENS = 2;
	public static final int NEW_RELEASE = 1;
	public static final int REGULAR = 0;
	
	static double getPrice(Rental rental) {
		// 1) Calcula el importe de cada alquiler
		double price = 0;
		switch (rental.getMovie().getCategory()) {
		case NEW_RELEASE:
			price += rental.getDays() * 3;
			break;
		case REGULAR:
			price += 2;
			if (rental.getDays() > 2)
				price += (rental.getDays() - 2) * 1.5;
			break;
		case CHILDRENS:
			price += 1.5;
			if (rental.getDays() > 3)
				price += (rental.getDays() - 3) * 1.5;
			break;
		}
		return price;
	}
	
	static int getPoints(Rental rental) {
		// 2) Cada alquiler da 1 punto. Punto extra para novedades alquiladas 2 o más días
		int points = 1;
		if ((rental.getMovie().getCategory() == NEW_RELEASE) && rental.getDays() > 1)
			points = 2;
		return points;
	}	


}
