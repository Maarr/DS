package editor;

import java.util.Stack;

import cambios.Cambio;

public class Historial {
	
	private Stack<Cambio> cambios;
	private Dibujo dibujo;
	
	public Historial(Dibujo dibujo) {
		cambios=new Stack<Cambio>();
		this.dibujo=dibujo;
	}
	
	public void undo() {
		cambios.pop().undo();
	}
	public  void redo() {
		cambios.pop().redo();
	}
	
	public void añadirCambio(Cambio cambio) {
		cambios.push(cambio);
	}

}
