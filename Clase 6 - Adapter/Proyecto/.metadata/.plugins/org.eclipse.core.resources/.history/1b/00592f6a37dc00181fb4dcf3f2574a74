package editores;

import model.Foto;

public class EditorFoto extends Editor{
	
	private Foto foto;
	
	public EditorFoto(Foto foto) {
		this.foto=foto;
	}

	@Override
	public void editar() {
		System.out.println("Editando Monumento.");
		System.out.println("Valores actuales:");
		imprimir();
		System.out.println("Escriba nuevos valores (dejar en blanco para dejar el valor actual):");
		System.out.print("- Autor: ");
		String texto = getLínea();
		if (texto.length() > 0)
			monumento.setAutor(texto);

		System.out.print("- Dirección: ");
		texto = getLínea();
		if (texto.length() > 0)
			monumento.setDirección(texto);

		System.out.println("Valores finales:");
		imprimir();
		
	}

}
