package main;

import java.io.IOException;
import java.util.ArrayList;
import java.util.List;
import elementos.GraficoCircular;
import elementos.LineaEstado;
import encuesta.ElementoGrafico;
import encuesta.Encuesta;
import encuesta.Pregunta;
import encuesta.TextUserInterface;

public class Main2 {

	public static void main(String[] args) throws IOException {
Encuesta encuesta = new Encuesta(new Pregunta("¿Está a favor de la energia nuclear?"));
		
		List<ElementoGrafico> elementos=new ArrayList<ElementoGrafico>();
		elementos.add(new GraficoCircular());
		elementos.add(new LineaEstado(encuesta));
		
		encuesta.establecerGraficos(elementos);
		
		TextUserInterface userInterface = new TextUserInterface();
		userInterface.rellena(encuesta);

	}

}
