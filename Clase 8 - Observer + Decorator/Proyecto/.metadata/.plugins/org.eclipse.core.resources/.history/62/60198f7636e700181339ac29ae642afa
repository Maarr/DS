package main;
import java.io.*;
import java.util.ArrayList;
import java.util.List;

import elementos.GraficoBarras;
import elementos.GraficoCircular;
import encuesta.*;

public class Main {

	public static void main(String[] args) throws IOException {
		List<ElementoGrafico> elementos=new ArrayList<ElementoGrafico>();
		elementos.add(new GraficoBarras());
		elementos.add(new GraficoCircular());
		elementos.add(new LineaEstado());
		
		Encuesta encuesta = new Encuesta(new Pregunta("¿Está a favor de la energia nuclear?"),elementos);
		

		TextUserInterface userInterface = new TextUserInterface();
		userInterface.rellena(encuesta);
	}

}

