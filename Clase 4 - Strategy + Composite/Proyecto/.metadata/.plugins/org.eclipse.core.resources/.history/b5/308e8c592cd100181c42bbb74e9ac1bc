
public class Validador {
	
	public boolean validarLongitud(String cadena, int tope) {
		if(cadena.length()==tope)
			return true;
		else
			return false;
	}
	
	public boolean validarSoloLetras(String cadena) {
		boolean valido=true;
		for (char ch : cadena.toCharArray()) {
			if (!Character.isLetter(ch)) {
				valido = false;
				break;
			}
		}
		return valido;
	}

}
