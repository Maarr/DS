package datos;

import campos.Campo;
import formulario.Validador;

public abstract class Dato {
	
	private Campo campo;
	private Validador validador=new Validador();
	
	public Dato(Campo campo) {
		this.campo=campo;
	}
	
	public void pideDato() {
		do {
			campo.pideDato();
		}while(!validar());
		
	}
	
	public String getDato() {
		return campo.getDato();
	}
	
	public Validador getValidador() {
		return validador;
	}
	
	public abstract boolean validar();
	
	

}
