package datos;

import campos.Campo;

public abstract class Dato {
	
	private Campo campo;
	
	public Dato(Campo campo) {
		this.campo=campo;
	}
	
	public void pideDato() {
		do {
			campo.pideDato();
		}while(!validar());
		
	}
	
	public String getDato() {
		return valor;
	}
	
	public abstract boolean validar();
	
	

}
