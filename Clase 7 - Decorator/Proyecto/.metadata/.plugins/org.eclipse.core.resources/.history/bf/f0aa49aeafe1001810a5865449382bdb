package fileSystem;

import java.io.*;

public class FileSystem {
	
	private String name;
	private Output output;
	
	public FileSystem(String name, Output output) {
		this.name=name;
		this.output=output;
	}

	public void copy() {
		try {
			FileReader reader = new FileReader(name);

			int c;
			while ((c = reader.read()) != -1)
				output.send((char) c);

			reader.close();
			output.close();

		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
