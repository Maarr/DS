package modificaciones;

import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

import fileSystem.FileSystem;

public class NormalizarSaltosLinea {
	
	private FileSystem fs;
	private String name;
	
	public NormalizarSaltosLinea(FileSystem fs,String name) {
		this.fs=fs;
		this.name=name;
	}
	
	public 
	
	public void normalizarSaltos() {
		try {
			FileWriter writer=new FileWriter(name);
			FileReader reader=new FileReader(name);
			int c;
			while ((c = reader.read()) != -1) 
				if(c!='\r')
					writer.write(c);

			reader.close();
			writer.close();

		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
