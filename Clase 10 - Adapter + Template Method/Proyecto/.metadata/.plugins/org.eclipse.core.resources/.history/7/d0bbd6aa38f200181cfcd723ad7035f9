package game;

import java.awt.Point;

import adapters.Platform;
import platform.Image2D;

public abstract class Game {
	
	Platform platform;
	Image2D image;
	
	public Game(Platform p,String file) {
		this.platform=p;
		image=platform.loadImage(file);
	}
		
	public Point getPosition() {
		return platform.getPosition();
	}
	
	public void draw() {
		platform.drawBall(image,getPosition());
	}
	
	abstract void play();

}
